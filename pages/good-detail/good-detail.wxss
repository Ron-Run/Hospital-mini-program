page {
  padding-bottom: 90rpx;
}
.detail swiper {
  background-color: #ccc;
  margin: 0 auto;
  width: 400rpx;
  height: 400rpx;
}
.detail swiper swiper-item image {
  width: 100%;
}
.price {
  padding: 10rpx 0 10rpx 20rpx;
  font-size: 38rpx;
  color: var(--themeColor);
}
.product_title {
  display: flex;
  font-size: 26rpx;
}
.product_title .name {
  flex: 5;
  padding: 0 10rpx;
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.product_title .collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000;
  color: #333;
}
.product_title .collect .iconshoucang1 {
  color: #f3b610;
}
.picdetail {
  margin-top: 5rpx;
  color: var(--themeColor);
  font-size: 36rpx;
  padding: 15rpx;
  font-weight: 600;
  border-top: 5px solid #eee;
  border-bottom: 5px solid #eee;
}
.tool {
  border-top: 1px solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
}
.tool .func_item {
  position: relative;
  background-color: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tool .func_item .iconfont {
  color: #646464;
}
.tool .func_item .text {
  font-size: 22rpx;
}
.tool .func_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.tool .btn_add {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #ffa300;
}
.tool .btn_buy {
  color: #fff;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9544d;
}
